# Anthropic API Key (required for tip generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Voyage AI API Key (required for embeddings/semantic search)
VOYAGE_API_KEY=your_voyage_api_key_here

# Microsoft Teams Webhook URL (required for posting tips)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# Azure AD / Entra ID Authentication (required for login)
# Redirect URI: http://localhost:4000/auth/azure_ad/callback
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
